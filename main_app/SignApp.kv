#: import mtx kivy.metrics
<SigninWindow>:
    id: main_win
    orientation: "vertical"
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: rgba('#0e1574ff')
            Triangle:
                points: [0,self.size[1],self.size[0],self.size[1],0,self.size[1]-(.4*self.size[1])]
            Color:
                rgba: rgba('#0e1574c8')
            Triangle:
                points: [0,self.size[1],self.size[0],self.size[1],self.size[0],self.size[1]-(.4*self.size[1])]
        Widget:
            size_hint_y: .25
        Label:
            text: 'Welcome'
            color: rgba('#0e1574ff')
            size_hint_y: .3
        BoxLayout:
            orientation: "vertical"
            size_hint_y: .45
            padding: [mtx.dp(20), 0]
            FlatInput:
                id: username_field
                hint_text: "UserID"
                size_hint_y: .1
                multiline: False
                focus: True
                on_text_validate: pwd_field.focus = True
            Widget:
                size_hint_y: .1
            FlatInput:
                id: pwd_field
                hint_text: "Password"
                size_hint_y: .1
                multiline: False
                password: True
                on_text_validate: root.validate_user()
            Widget:
                size_hint_y: .3
            FlatButton:
                text: "Sign In"
                size_hint_y: .2
                canvas.before:
                    Color:
                        rgba: rgba('#0e1574ff')
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                on_release: root.validate_user()
            Widget:
                size_hint_y: .1
            Label:
                id: info
                text: ''
                markup: True
                size_hint_y: .1

<FlatButton@Button>:
    background_normal: ''
    background_color: [1,1,1,0]
<FlatInput@TextInput>:
    background_active: ''
    background_normal: ''
    background_color: [1,1,1,0]
    canvas.before:
        Color:
            rgba: rgba('#0e1574ff')
        Rectangle:
            pos: self.pos
            size: [self.size[0] ,1] 